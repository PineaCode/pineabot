{
  "tasks": {
    "start": "deno run --allow-read --allow-env --allow-net src/main.ts",
    "update:lock": "deno cache --lock=deno.lock --lock-write src/main.ts"
  },
  "importMap": "./import_map.json",
  "fmt": {
    "files": {
      "include": [
        "src/",
        "test/",
        "scripts.config.ts"
      ]
    },
    "options": {
      "useTabs": true,
      "lineWidth": 120,
      "singleQuote": true,
      "proseWrap": "preserve",
      "semiColons": false
    }
  }
}
